<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bang.stepup3.DeviceSetupActivityFragment"
    tools:showIn="@layout/activity_device_setup"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:text="FOOD NAME"
        android:id="@+id/foodName"
        android:layout_weight="0.21"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#a70e10"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:src="@drawable/calories_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:text="Calories: "
            android:id="@+id/caloriesTextView"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="fill_vertical"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:src="@drawable/steps_icon"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:text="Steps:"
            android:id="@+id/stepsTextView"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="fill_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/acc_start"
        android:layout_gravity="center_horizontal"
        android:background="#2987d9"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSE"
        android:id="@+id/acc_stop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />
</LinearLayout>